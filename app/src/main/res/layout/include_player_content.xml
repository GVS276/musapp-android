<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_bg_default"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/action_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nowPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:ellipsize="middle"
        android:text="@string/title_now_playing"
        android:textColor="@color/white"
        android:textSize="@dimen/text_very_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/subtract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:drawablePadding="5dp"
        android:lines="1"
        android:ellipsize="middle"
        android:text="@string/char_time"
        android:textColor="@color/white"
        android:textSize="@dimen/text_very_size"
        app:layout_constraintTop_toBottomOf="@+id/nowPlaying"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/menu"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/subtract" />

    <com.vg276.musapp.thumb.ThumbRectangleView
        android:id="@+id/thumb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/padding_parent_horizontal"
        android:src="@drawable/thumb_big"
        app:layout_constraintTop_toBottomOf="@+id/album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/padding_parent_horizontal"
        android:lines="1"
        android:ellipsize="middle"
        android:text="@string/title_not_playing"
        android:textColor="@color/white"
        android:textSize="@dimen/text_item_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="@dimen/padding_parent_horizontal"
        android:drawablePadding="5dp"
        android:lines="1"
        android:ellipsize="middle"
        android:text="@string/title_select_track"
        android:textColor="@color/white"
        android:textSize="@dimen/text_sub_item_size"
        app:layout_constraintTop_toBottomOf="@+id/artist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/audioSeekBar"
        style="@style/AudioSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_parent_horizontal"
        android:layout_marginBottom="15dp"
        android:progress="0"
        android:max="0"
        app:layout_constraintBottom_toTopOf="@+id/duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingHorizontal="10dp"
        android:gravity="center_horizontal"
        android:text="@string/char_time"
        android:textColor="@color/white"
        android:textSize="@dimen/text_very_size"
        app:layout_constraintBottom_toTopOf="@+id/playOrPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/random"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_parent_horizontal"
        android:padding="10dp"
        android:src="@drawable/random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/previous"
        app:layout_constraintBottom_toBottomOf="@id/previous" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/previous"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:src="@drawable/previous"
        app:layout_constraintEnd_toStartOf="@+id/playOrPause"
        app:layout_constraintTop_toTopOf="@id/playOrPause"
        app:layout_constraintBottom_toBottomOf="@id/playOrPause" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/playOrPause"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:src="@drawable/play_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/next"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@drawable/next"
        app:layout_constraintStart_toEndOf="@+id/playOrPause"
        app:layout_constraintTop_toTopOf="@id/playOrPause"
        app:layout_constraintBottom_toBottomOf="@id/playOrPause" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/repeat"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_parent_horizontal"
        android:padding="10dp"
        android:src="@drawable/repeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/next"
        app:layout_constraintBottom_toBottomOf="@id/next" />
</androidx.constraintlayout.widget.ConstraintLayout>